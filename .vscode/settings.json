{
  "python.languageServer": "Pylance",
  "python.formatting.provider": "black",
  "python.linting.mypyEnabled": true,
  "editor.fontSize": 24,
  "code-runner.executorMap": {
    "python": "$pythonPath -u $fullFileName",
  },
  "python.linting.enabled": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    ".mypy_cache/**": true,
    ".pytest_cache/**": true,
  }
}
